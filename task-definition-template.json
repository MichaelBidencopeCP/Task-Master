{
  "family": "task-master-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/task-master-ecs-task-execution-role",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "<IMAGE>",
      "essential": true,
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "<SECRET_MANAGER_JWT_ARN>"
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/task-master",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "app"
        }
      }
    }
  ]
}